<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pal_1"
    >
    <ImageView
        android:id="@+id/filmImg"
        tools:background="@tools:sample/avatars"
        android:layout_width="160dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore = "ContentDescription"/>
    <TextView
        android:id="@+id/filmTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toStartOf="@id/filmLikeBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/pal_4"
        app:layout_constraintStart_toEndOf="@id/filmImg"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Название"
        />

    <ImageView
        android:id="@+id/filmLikeBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/baseline_favorite_border_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/filmAboutBtn"
        />
    <ImageView
        android:id="@+id/filmAboutBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/baseline_article_light_blue_900_24dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/filmLikeBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/filmShadow"/>
    <ImageView
        android:id="@+id/filmShadow"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@id/filmImg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/cardview_shadow_start_color"
        tools:ignore="ContentDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>